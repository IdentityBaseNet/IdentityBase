@using Microsoft.AspNetCore.Authentication

<h1>Secure</h1>

<div class="panel">
    <a class="btn btn-primary" href="~/callapi-user-token">Call API using user token</a>
    <a class="btn btn-primary" href="~/renew-tokens">Renew user token</a>
    <a class="btn btn-primary" href="~/callapi-client-credentials">Call API using client crendentials</a>
    
    <!--<a class="btn btn-primary" href="~/invite">Invite User Account</a>-->
</div>

@{
    string it = await Context.GetTokenAsync("id_token");
    string at = await Context.GetTokenAsync("access_token");
    string rt = await Context.GetTokenAsync("refresh_token");
}

<div>
    <dl>
        @if (it != null)
        {
            <dt>id_token</dt>
            <dd>@it</dd>
        }
        @if (at != null)
        {
            <dt>access_token</dt>
            <dd>@at</dd>
        }
        @if (rt != null)
        {
            <dt>refresh_token</dt>
            <dd>@rt</dd>
        }
        @foreach (var claim in User.Claims)
        {
            <dt>@claim.Type</dt>
            <dd>@claim.Value</dd>
        }
    </dl>
</div>