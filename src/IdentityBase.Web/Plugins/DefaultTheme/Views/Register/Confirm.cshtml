@model IdentityBase.Actions.Register.ConfirmViewModel

<div class="login-page">
    <div class="page-header">
        <h1 localize="">Complete your registration</h1>
    </div>

    @Html.Partial("_ValidationSummary")

    <div class="row">
        <div class="col-sm-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title" localize="">Local Account</h3>
                </div>
                <div class="panel-body">
                    <form method="post">

                        <fieldset>
                            <div class="form-group">
                                <label asp-for="Password "localize="">Password</label>
                                <input type="password"
                                       class="form-control"
                                       placeholder="@Localizer["Enter password"]"
                                       asp-for="Password"
                                       autocomplete="off" />
                            </div>
                            <div class="form-group">
                                <label asp-for="PasswordConfirm" localize="">Repeat password</label>
                                <input type="password"
                                       class="form-control"
                                       placeholder="@Localizer["Enter password"]"
                                       asp-for="PasswordConfirm"
                                       autocomplete="off" />
                            </div>

                            <div class="form-group">
                                <button class="btn btn-primary"
                                        localize="">Complete</button>
                            </div>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>